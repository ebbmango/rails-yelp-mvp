<div class="text-center">
  <div class="card mt-5 w-50" style="margin: 0 auto;">
    <div class="card-header">
      Write a review for <strong><%= @restaurant.name %></strong>
    </div>
    <div class="card-body">
      <%= simple_form_for [@restaurant, @review] do |f|  %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (0..5), selected: 0 %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back to details', restaurant_path(@restaurant.id), class: 'btn btn-primary mt-5' %>
</div>
