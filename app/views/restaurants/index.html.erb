<div class="text-center">
<%# <p>Find me in app/views/restaurants/index.html.erb</p> %>
  <h1 class="mt-5">Restaurants</h1>

  <% if Restaurant.all.empty? %>
    <p class="mt-4">There are currently no registered restaurants!</p>
  <% else %>
    <div class="row mt-3">
      <% @restaurants.each do |restaurant| %>
        <div class="col-3 text-center">
          <div class="card p-4 mt-4">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.category.capitalize %> food</p>
            <%= link_to "See Details", restaurant_path(restaurant), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= link_to 'Add new restaurant', new_restaurant_path, class: 'btn btn-primary mt-5' %>
</div>


